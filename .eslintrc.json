{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true,
        "node": true
    },
    "extends": ["airbnb-base", "eslint:recommended", "prettier", "plugin:jest/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "jest", "prettier"],
    "rules": {
        "quotes": ["error", "single"],
        "import/extensions": 0,
        "import/no-unresolved": 0,
        "import/no-dynamic-require": 0,
        "global-require": 0,
        "import/prefer-default-export": 0,
        "no-underscore-dangle": 0,
        "no-await-in-loop": 0,
        "no-restricted-syntax": 0,
        "no-return-await": 0
    }
}
